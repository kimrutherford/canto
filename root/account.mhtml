<div id="login">
  <form name="login" method="get" action="<% $c->uri_for('/login') %>">
    <div>
      User ID: <input id="email_address" name="email_address" size="30"/>
    </div>
    <div>
      Password: <input type="password" id="password" name="password" size="30"/>
    </div>
    <input type="hidden" name="return_path" 
           value="<% $return_path %>"/>
    <input class="btn btn-primary curs-finish-button" 
           id="submit" name="submit" type="submit" value="login"/>
  </form>
</div>

