<%args>
$title => 'Genes'
$pub
</%args>

<div class="gene-list curs-box">
  <div class="curs-box-title">
    <div>
% if ($read_only_curs) {
Pathogen genes from this publication
% } else {
Pathogen genes and genotypes
% }
    <& /curs/inline_help.mhtml, key => 'choose_gene' &>
    </div>
  </div>
  <div class="curs-box-body">
% if (!$read_only_curs) {
   <div class="gene-list-instructions">
Click on a pathogen gene name to start entering data
   </div>
% }
% if (@gene_hashes) {
  <table>
%   for (my $y = 0; $y < $row_max; $y++) {
    <tr>
%     for (my $x = 0; $x < $col_count; $x++) {
%       my $index = $y + $x * $row_max;
%       my $gene = $gene_hashes[$index];
%       if (defined $gene) {
      <td>
        <a href="<% $start_path . '/feature/gene/view/' . $gene->{gene_id} . ($read_only_curs ? '/ro' : '') %>"
          <span>
            <% $gene->{identifier} %>
          </span>
        </a>
</td>
%       }
%     }
    </tr>
%   }
  </table>
% } else {
  <div class="no-genes-message">
    [No genes]
  </div>
% }

% if (!$read_only_curs) {
  <div class="feature-list-action">
    <a href="<% $edit_path %>">Edit pathogen gene list ...</a>
  </div>
% }
  <div class="feature-list-action">
    <a href="<% $genotype_manage_url %>"><% $read_only_curs ? 'View pathogen genotypes ...' : 'Pathogen genotype management ...' %></a>
  </div>
  </div>
</div>
</div>

<%init>
use Canto::Curs;
use Canto::Curs::GeneProxy;

my $schema = $c->stash()->{schema};
my $config = $c->config();

my @all_genes = map {
  Canto::Curs::GeneProxy->new(config => $config, cursdb_gene => $_);
} Canto::Controller::Curs->get_ordered_gene_rs($schema, 'primary_identifier')->all();

my @gene_hashes = sort {
     $a->{identifier} cmp $b->{identifier};
   } map {
     my $extra_text = '';
     {
       identifier => $_->primary_name() || $_->primary_identifier(),
       gene_id => $_->gene_id(),
     }
   } @all_genes;

# pad so we don't get two columns if there are only a few genes
if (@gene_hashes <= 5) {
  push @gene_hashes, (undef) x @gene_hashes;
}

my $read_only_curs = $c->stash()->{read_only_curs};

my $start_path = $c->stash()->{curs_root_uri};
my $edit_path = "$start_path/edit_genes";
my $genotype_manage_url = "$start_path/genotype_manage";

if ($read_only_curs) {
  $genotype_manage_url .= '/ro';
}

my $row_max = int((@gene_hashes + 1) / 2);
my $col_count = 2;

</%init>
